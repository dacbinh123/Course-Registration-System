<div class="courses-container">
  <h2 class="courses-title">Danh Sách Khóa Học</h2>

  {{#if isAdmin}}
    <a href="/course/create" class="btn-create">Đăng Khóa Học</a>
  {{/if}}

  <div class="courses-grid">
    {{#each courses}}
      <div class="course-card">
        <img src="/uploads/courses/{{this.image}}" alt="{{this.title}}" class="course-image" />
        <h3 class="course-title">{{this.title}}</h3>
        <p class="course-description">{{this.description}}</p>
        <a href="/courses/{{this._id}}" class="btn-detail">Xem Chi Tiết</a>

        {{#if ../isAdmin}}
          <a href="/courses/edit/{{this._id}}" class="btn-edit">Sửa</a>
          <form action="/courses/delete/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn-delete" onclick="return confirm('Bạn có chắc chắn muốn xóa khóa học này?')">Xóa</button>
          </form>
        {{/if}}
      </div>
    {{/each}}
  </div>
</div>
